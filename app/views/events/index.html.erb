<!-- WRAPPER -->
    <!-- PAGE TITLE -->
      <header id="page-title">

        <div class="container">
          <div class="pull-right">
          <% if user_signed_in? %>
            <% if current_user.has_role? :admin %>
              <%= link_to new_event_path do %>
                <i class="featured-icon half fa fa-plus"></i>
              <% end %>
            <% end %>
          <% end %>
          </div>
          <h1>Productions</h1>

          <ul class="breadcrumb">
              <%= render_breadcrumbs :tag => :li, :separator => "" %>
            
          </ul>
        </div>
      </header>
      <div class="container magazine">
        <div class="row">

          <!-- center column -->
          <div class="col-md-12">
            

            <!-- CATEGORY TITLE -->
            <h3 class="page-header nomargin-top">
              <strong class="styleColor">Current</strong> Events
            </h3>


           


            <% unless @current_events == nil %>
            <% @current_events.each do |event| %>
              <!-- FEATURED -->
              <div class="row">
                <div class="col-md-6">
                  <% unless event.attachments.first == nil%>
                      <%= link_to event_path(event) do %>
                      <%= image_tag event.attachments.first.file(:medium), :class=> "img-responsive" %>
                    <% end %>
                  <% else %>
                      <%= link_to event_path(event) do %>
                      <%= image_tag "medium/missing.png", :class=> "img-responsive" %>
                      <% end %>
                  <% end %>
               
                </div>
                <div class="col-md-6">
                  <h2><%= link_to event.title, event_url(event), :class=>"styleColor" %></h2>
                  <h3><%= event.start_date.strftime('%m/%d/%Y')+" - "+event.end_date.strftime('%m/%d/%Y')%></h3>
                 
                  <p><%= event.description %></p>
                  <%= link_to "Read More", event_url(event), :class=> "btn btn-default"%>
                 
                </div>
              </div>
              <!-- /FEATURED -->
             <% end %>

            <% end %>


          <hr class="half-margins" /><!-- separator -->
            <!-- CATEGORY TITLE -->
            <h3 class="page-header nomargin-top">
              <strong class="styleColor">Upcoming</strong> Events
            </h3>
            <hr class="half-margins" /><!-- separator -->

          


          <% @upcoming_events.each do |event| %>


            <!-- article summary -->
            <div class="row">
              <div class="col-md-4 text-center">
              <% event_photo = event.attachments %>
              <% unless event_photo.first == nil%>
                <%= link_to event_path(event) do %>
                  <%= image_tag event_photo.first.file(:medium), :class=> "img-responsive" %>
                <% end %>
              <% else %>
                  <%= link_to event_path(event) do %>
                  <%= image_tag "medium/missing.png", :class=> "img-responsive" %>
                  <% end %>
              <% end %>
               
                <!-- star rated -->
           
                <!-- /star rated -->
              </div>
              <div class="col-md-8">
                <h3><%= link_to event.title, event_url(event) %></h3>
                <h4><%= event.start_date.strftime('%m/%d/%Y')+" - "+event.end_date.strftime('%m/%d/%Y')%></h4>
                <p>
                  <%= event.description %>
                </p>
              </div>
            </div>
            <!-- /article summary -->
            <% end %>
                        

            <h3 class="page-header nomargin-top">
              <strong class="styleColor">Past</strong> Productions
            </h3>
            <hr class="half-margins" /><!-- separator -->

          


          <% @past_events.each do |event| %>


            <!-- article summary -->
            <div class="row">
              <div class="col-md-4 text-center">
              <% event_photo = event.attachments %>
              <% unless event_photo.first == nil%>
                <%= link_to event_path(event) do %>
                  <%= image_tag event_photo.first.file(:medium), :class=> "img-responsive" %>
                <% end %>
              <% else %>
                  <%= link_to event_path(event) do %>
                  <%= image_tag "medium/missing.png", :class=> "img-responsive" %>
                  <% end %>
              <% end %>
               
                <!-- star rated -->
           
                <!-- /star rated -->
              </div>
              <div class="col-md-8">
                <h3><%= link_to event.title, event_url(event) %></h3>
                <h4><%= event.start_date.strftime('%m/%d/%Y')+" - "+event.end_date.strftime('%m/%d/%Y')%></h4>
                <p>
                  <%= event.description %>
                </p>
              </div>
            </div>
            <!-- /article summary -->
            <% end %>
                        
            <hr class="half-margins" /><!-- separator -->


          

                        
   




            <hr /><!-- final separator -->


            <!-- PAGINATION -->
            <div class="row">

             

            </div>
            <!-- /PAGINATION -->

          </div>
          <!-- /center column -->



        </div>

      </div>
