<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  

<div class="row">

                <div class="col-md-12">
                  <div class="form-group">
                   <%= f.label :title, :class => "control-label" %>
                   <%= f.text_field :title, :class=> "form-control", :required => true %>
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="form-group">
                   <%= f.label :description, :class => "control-label" %>
                   <%= f.text_area :description, :class => "form-control", :rows => 5 %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-6">
                     <%= f.label :start_date, :class => "control-label" %>
                     <%= f.date_field :start_date, :class => "form-control", :required => true %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :end_date, :class => "control-label" %>
                    <%= f.date_field :end_date, :class => "form-control", :required => true %>
                  </div>
                </div>

                 <div class="form-group">
                  <div class="col-md-6">
                     <%= f.label :ticket_start, :class => "control-label" %>
                     <%= f.date_field :ticket_start, :class => "form-control", :required => true %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :ticket_end, :class => "control-label" %>
                    <%= f.date_field :ticket_end, :class => "form-control", :required => true %>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                   <%= f.label :tickets_url, :class => "control-label" %>
                   <%= f.text_field :tickets_url, :class=> "form-control", :required => false %>
                  </div>
                </div>


              </div>






    

  <div class="row">
    <div class="col-md-12">
    <%= link_to events_url, :class => 'btn btn-default' do %>
      Cancel
    <% end %>
    <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

