    <!-- PAGE TITLE -->
      <header id="page-title">

        <div class="container">
          <div class="pull-right">
          <% if user_signed_in? %>
            <% if current_user.has_role? :admin %>
              <%= link_to new_production_path do %>
                <i class="featured-icon half fa fa-plus"></i>
              <% end %>
            <% end %>
          <% end %>
          </div>
          <h1>Productions</h1>

          <ul class="breadcrumb">
              <%= render_breadcrumbs :tag => :li, :separator => "" %>
            
          </ul>
        </div>
      </header>
      <div class="container magazine">
        <div class="row">

          <!-- center column -->
          <div class="col-md-12">
            

            <!-- CATEGORY TITLE -->
            <h3 class="page-header nomargin-top">
              <strong class="styleColor">Current</strong> Productions
            </h3>


           


            <% unless @current_production == nil %>
            <!-- FEATURED -->
            <div class="row">
              <div class="col-md-6">
              <%= @current_productions.each do |production| %>
                <% unless production.attachments.first == nil%>
                <%= link_to production_path(production) do %>
                  <%= image_tag production.attachments.first.file(:medium), :class=> "img-responsive" %></a>
                <% end %>
                <% else %>
                    <%= link_to production_path(production) do %>
                    <%= image_tag "medium/missing.png", :class=> "img-responsive" %>
                    <% end %>
                <% end %>
              <% end %>

              </div>
              <div class="col-md-6">
                <h2><%= link_to @current_production.try(:title), production_url(@current_production), :class=>"styleColor" %></h2>
                <h3><%= production.start_date.strftime('%m/%d/%Y')+" - "+production.end_date.strftime('%m/%d/%Y')%></h3>
               
                <p><%= @current_production.description %></p>
                <%= link_to "Read More", production_url(@current_production), :class=> "btn btn-default"%>
               
              </div>
            </div>
            <!-- /FEATURED -->
