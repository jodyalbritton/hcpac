<%= form_for([@production, @showtime], :html => { :class => "form-horizontal" }) do |f| %>
  <% if @showtime.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@showtime.errors.count, "error") %> prohibited this showtime from being saved:</h4>

      <ul>
      <% @showtime.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, :class => "col-sm-2 control-label" %>
    <div class="col-md-6">
      <%= f.date_field :date, :class => "form-control", :required => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Time, :class => "col-sm-2 control-label" %>
    <div class="col-md-6">
      <%= f.time_field :date, :class => "form-control", :required => true %>
    </div>
  </div>
 
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
