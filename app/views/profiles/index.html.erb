<div class="page-header">
  <%= link_to new_profile_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Profile
  <% end %>
  <h1>Listing profiles</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>First name</th>
            <th>Middle name</th>
            <th>Last name</th>
            <th>Bio</th>
            <th>User</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @profiles) do |profile| %>
            <td><%= profile.first_name %></td>
            <td><%= profile.middle_name %></td>
            <td><%= profile.last_name %></td>
            <td><%= profile.bio %></td>
            <td><%= profile.user %></td>
            <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
